<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="MapleLemonJPA" transaction-type="RESOURCE_LOCAL">
        <description> Hibernate JPA Configuration Example</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>database.entity.AccountsPO</class>
        <class>database.entity.DropDataPo</class>
        <class>database.entity.DropDataGlobalPo</class>
        <class>database.entity.FamelogPo</class>
        <class>database.entity.CharacterPO</class>
        <class>database.entity.BuddiesPO</class>
        <class>database.entity.ShopItemPo</class>
        <class>database.entity.ShopPo</class>
        <properties>
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="maplestory" />
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/maple027?zeroDateTimeBehavior=convertToNull&amp;serverTimezone=Asia/Shanghai" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
        </properties>
    </persistence-unit>
</persistence>